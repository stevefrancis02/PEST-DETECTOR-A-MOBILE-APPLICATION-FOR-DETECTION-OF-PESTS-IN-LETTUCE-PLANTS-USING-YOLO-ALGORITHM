<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F9F9"
    tools:context=".Home">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="18dp"
                    android:padding="18dp"
                    android:text="Lettuce"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/cardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="296dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="70dp"
                    android:background="#F2F9F9"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="204dp"
                        android:background="#F2F9F9"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lettucepp" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1sp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:text="What is lettuce?"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="20dp"
                        android:columnCount="2"
                        android:padding="20dp"
                        android:rowCount="1"
                        app:layout_constraintBottom_toTopOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textView4">

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/lettuce1" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/lettuce2" />

                    </GridLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="170dp"
                        android:padding="18dp"
                        android:text="Lettuce is a leafy vegetable that is commonly used in salads and sandwiches. It is low in calories and high in nutrients, making it a healthy addition to any diet."
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="630dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1sp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="What are the benefits of eating lettuce?"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@id/gridLayout4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <GridLayout
                        android:id="@+id/gridLayout4"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:columnCount="2"
                        android:padding="2dp"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView8">

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/eatinglettuce1" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/eatinglettuce2" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/eatinglettuce3" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/eatinglettuce4" />

                    </GridLayout>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="Lettuce is high in fiber, which promotes digestive health and helps prevent constipation. Eating lettuce can also stimulate the production of digestive enzymes, which can aid in the breakdown of food."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/gridLayout4" />


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="Lettuce is a good source of vitamins and minerals, including vitamins A and C, potassium, and folate. These nutrients are important for maintaining healthy skin, bones, and immune function."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView9" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="Lettuce is a low-calorie food that can help with weight management. It is also low in carbohydrates and high in fiber, making it a good option for those following a low-carbohydrate or ketogenic diet."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1sp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="What are the different types of lettuce?"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@id/gridLayout5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <GridLayout
                        android:id="@+id/gridLayout5"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:columnCount="5"
                        android:padding="10dp"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView12">

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/iceberg" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/romaine" />

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/butterhead" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/leaf" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/stem" />


                    </GridLayout>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="18dp"
                        android:text="There are many different types of lettuce, including iceberg, romaine, butterhead, leaf, and stem lettuce."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/gridLayout5"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1sp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="How should lettuce be stored to keep it fresh?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/gridLayout6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <GridLayout
                        android:id="@+id/gridLayout6"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView14">

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/ref" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/store" />


                    </GridLayout>

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="Lettuce should be stored in the refrigerator, ideally in a plastic bag with some air holes. It should be kept away from fruits and vegetables that release ethylene gas, which can cause the lettuce to spoil faster."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/gridLayout6" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1sp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="How do you grow lettuce?"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@id/gridLayout7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <GridLayout
                        android:id="@+id/gridLayout7"
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:columnCount="3"
                        android:padding="5dp"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView16">

                        <ImageView

                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="1dp"
                            android:padding="10dp"
                            android:src="@drawable/growing1" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/growing2" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:padding="10dp"
                            android:src="@drawable/growing3" />


                    </GridLayout>

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-40dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="Lettuce can be grown in a variety of ways, including in containers, raised beds, or directly in the ground. It requires well-draining soil, consistent moisture, and a cool climate. Sow the seeds about a quarter to a half inch deep and keep the soil moist until the seeds germinate. Once the lettuce has sprouted, thin the plants to allow for proper spacing."
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/gridLayout7" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/bottom_toolbar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

